class Solution {
public:
    bool isPowerOfThree(int n) {
        int res=n;
        if(n==1) return true;
        if(n%3==0){
            while(res>=3 && res%3==0){
                res=res/3;
            }
            if(res==1){
                return true;
            }else 
                return false;
        }else
            return false;
    }
};
